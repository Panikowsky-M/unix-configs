#Sound control keybinding
exec_always amixer set "Master" 1+
bindsym XF86AudioRaiseVolume exec --no-startup-id pactl set-sink-volume 0 +5% 
bindsym XF86AudioLowerVolume exec --no-startup-id pactl set-sink-volume 0 -5% 
bindsym $mod+F8 exec --no-startup-id pactl set-sink-mute 0 toggle 
#because my Lenovo laptop function keys not work correctly, I had to use this keybindings
#Screen brightness keybings
bindsym XF86MonBrightnessDown exec xbacklight -dec 10
bindsym XF86MonBrightnessUp exec xbacklight -inc 10
#Take screenshot
bindsym $mod+Print exec maim -som 8 ~/Изображения/$(date +%d%m%C_%H%M%S).jpg

#Select launcher theme
bindsym  $mod+t exec rofi-theme-selector

#Auto select video output
bindsym XF86Launch7 exec --no-startup-id xrandr --auto --mode

bindsym XF86Launch2 exec --no-startup-id reboot
